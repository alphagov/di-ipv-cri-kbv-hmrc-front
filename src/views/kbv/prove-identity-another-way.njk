{% extends "base-form.njk" %}
{% from "hmpo-warning-text/macro.njk" import hmpoWarningText %}
{% from "components/onPageLoad/macro.njk" import ga4OnPageLoad %}

{% set gtmJourney = "prove-identity-another-way - start" %}

{% block submitButton %}
  {{ hmpoWarningText({
    text: translate("pages.proveIdentityAnotherWay.warning"),
    iconFallbackText: "Warning"
  }) }}
  {{ hmpoSubmit(ctx, {id: "continue", text: translate("buttons.next")}) }}

  {{ ga4OnPageLoad({
    nonce: cspNonce,
    statusCode: '200',
    englishPageTitle: 'pages.proveIdentityAnotherWay.title' | translate,
    taxonomyLevel1: 'web cri',
    taxonomyLevel2: 'hmrc-kbv',
    contentId: 'undefined',
    loggedInStatus: true,
    dynamic: false
  }) }}
{% endblock %}
