{% extends "base-form.njk" %}
{% from "hmpo-details/macro.njk" import hmpoDetails %}
{% from "components/onPageLoad/macro.njk" import ga4OnPageLoad %}

{% set gtmJourney = "kbv-hmrc - start" %}

{% block submitButton %}
  {{ hmpoDetails({
    summaryText: translate("pages.answerSecurityQuestions.details.summaryText"),
    html: translate("pages.answerSecurityQuestions.details.html")
  })}}

  {{ hmpoSubmit(ctx, {
    id: "start",
    text: translate("pages.answerSecurityQuestions.startButton"),
    attributes: {"data-nav": true, "data-link": ctx("action")}
  })}}
  {{ hmpoHtml(translate("pages.shared.abandon")) }}

  {{ ga4OnPageLoad({
    nonce: cspNonce,
    statusCode: '200',
    englishPageTitle: hmpoTitle | translate,
    taxonomyLevel1: 'web cri',
    taxonomyLevel2: 'hmrc-kbv',
    contentId: 'undefined',
    loggedInStatus: true,
    dynamic: false
  }) }}
{% endblock %}
